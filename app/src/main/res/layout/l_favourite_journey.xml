<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small">

    <View
        android:id="@+id/journey_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/padding_smallest"
        android:background="?drop_shadow"/>

    <include
        layout="@layout/l_favourite_journey_shared"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_padding_min"
        android:layout_marginRight="@dimen/dialog_padding_min"/>

</LinearLayout>