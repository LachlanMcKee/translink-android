<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="2000"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">

    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        <size
            android:width="80dp"
            android:height="80dp"/>

        <gradient
            android:centerColor="@color/dark_theme_progress_drawable_centre_colour"
            android:centerY="0.5"
            android:endColor="@color/dark_theme_progress_drawable_end_colour"
            android:startColor="@color/dark_theme_progress_drawable_start_colour"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>